<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Custom Snippet Options CSS -->
        <template id="vertel_snippet_snippet_css" inherit_id="website.layout" name="Vertel Custom Snippet Options CSS">
            <xpath expr="//t[@t-call-assets='website.assets_frontend']" position="after">
                <link href="/snippet_vertel/static/src/css/snippet_vertel.css" rel="stylesheet"/>
            </xpath>
        </template>

        <!-- Custom Snippet Options JS -->
        <template id="vertel_snippet_snippet_js" inherit_id="website.layout" name="Vertel Custom Snippet Custom JS">
            <xpath expr="//body" position="inside">
                <link href="/snippet_vertel/static/src/css/snippet_vertel.js" rel="stylesheet"/>
            </xpath>
        </template>

    </data>
</openerp>
