<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Layout menu, parallax, column, parallax -->
        <template id="layout_parallax_column_parallax" inherit_id="website.layout" customize_show="True" active="False" name="Layout Menu-Parallax-Column-Parallax" priority="99">
            <xpath expr="//main" position="inside">
                <section id="three_column">
                    <div class="three_column">
                        <div class="col-md-4">
                            <div id="column-left" class="oe_structure oe_empty"/>
                        </div>
                        <div class="col-md-4">
                            <div id="column-middle" class="oe_structure oe_empty"/>
                        </div>
                        <div class="col-md-4">
                            <div id="column-right" class="oe_structure oe_empty"/>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="parallax">
                        <div class="oe_structure oe_empty"/>
                    </div>
                </section>
            </xpath>
        </template>

        <!-- Theme BS-Multipurpose-Ruma -->
        <template id="theme_bs_multipurpose_ruma" inherit_id="website.layout" customize_show="True" active="False" name="Theme BS-Multipurpose-Ruma" priority="99">
            <!-- Customize CSS -->
            <xpath expr="//head" position="after">
                <link href="/theme_vertel/static/src/css/theme_bs_ruma.css" rel="stylesheet"/>
                <style>
                    .bs-body {
                        font-family: 'Open Sans', sans-serif;
                        list-style: none;
                    }

                    /* MENU */
                    #bs-menu {
                        z-index: 1;
                        margin-top: 0px;
                        background: #000;
                    }

                    /* COMPANY LOGO */
                    #bs-menu > div > div > a {
                        color: #FFF;
                    }

                    #bs-logo {
                        max-width: 100px;
                    }

                    /* MENU TEXT */
                    #bs-menu > div > div > ul > li > a {
                        color: #FFF;
                    }

                    /* STYLE WHEN MOUSE HOVER */
                    #bs-menu > div > div > ul > li > a:hover,
                    #bs-menu > div > div > ul > li > a:focus {
                        color: #000;
                        background-color: #fff;
                    }

                    /* STYLE WHEN PAGE ACTIVE */
                    #bs-menu > div > div > ul > .active > a {
                        color: #000;
                        background-color: #fff;
                    }

                    /* FOOTER STYLE*/
                    .bs-footer {
                        background: #000;
                        color: #fff;
                    }
                </style>
            </xpath>

            <!-- add company logo -->
            <xpath expr="//header//ul[@id='top_menu']" position="before">
                <img id="bs-logo" src="/logo.png" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
            </xpath>

            <!-- define id and class to menu bar -->
            <xpath expr="//body/div[@id='wrapwrap']/header/div" position="attributes">
                <attribute name="id">bs-menu</attribute>
                <attribute name="class">navbar navbar-inverse navbar-fixed-top</attribute>
            </xpath>

            <!-- define class to menu style -->
            <xpath expr="//header//ul[@id='top_menu']" position="attributes">
                <attribute name="class">nav navbar-nav navbar-right</attribute>
            </xpath>

            <!-- hide company name -->
            <xpath expr="//body/div[@id='wrapwrap']/header/div/div/div/a" position="attributes">
                <attribute name="class">navbar-brand hidden</attribute>
            </xpath>

            <!-- hide user login / out -->
            <xpath expr="//header//ul[@id='top_menu']/li[@class='divider']" position="attributes">
                <attribute name="class">hidden</attribute>
            </xpath>
            <xpath expr="//header//ul[@id='top_menu']/li[@class='dropdown']" position="attributes">
                <attribute name="class">hidden</attribute>
            </xpath>

            <!-- define a class to body -->
            <xpath expr="//body" position="attributes">
                <attribute name="class">bs-body</attribute>
            </xpath>
            <!-- define a class to footer -->
            <xpath expr="//footer" position="attributes">
                <attribute name="class">bs-footer</attribute>
            </xpath>
            <!-- add log in/out in footer -->
            <xpath expr="//footer" position="inside">
                <div class="container">
                    <div class="pull-right">
                        <li class="dropdown" t-ignore="true" t-if="website.user_id != user_id">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <b>
                                    <span t-esc="user_id.name"/>
                                    <span class="caret"/>
                                </b>
                            </a>
                            <ul class="dropdown-menu js_usermenu" role="menu">
                                <li><a href="/web" role="menuitem">My Account</a></li>
                                <li class="divider"/>
                                <li><a t-attf-href="/web/session/logout?redirect=/" role="menuitem">Logout</a></li>
                            </ul>
                        </li>
                    </div>
                    <div class="pull-right">
                        <li groups="base.group_public">
                            <a t-attf-href="/web/login">
                                <b>Sign in</b>
                            </a>
                        </li>
                    </div>
                </div>
            </xpath>
            <!-- Customize javascript -->
            <xpath expr="//body" position="after">
                <script type="text/javascript" src="/theme_vertel/static/src/js/theme_bs_ruma.js"/>
            </xpath>
        </template>

        <!-- Theme Middle Logo -->
        <template id="theme_middle_logo" inherit_id="website.layout" customize_show="True" active="False" name="Theme Middle Logo" priority="99">
            <!-- Customize CSS -->
            <xpath expr="//head" position="after">
                <link href="/theme_vertel/static/src/css/theme_middle_logo.css" rel="stylesheet"/>
                <link href='http://fonts.googleapis.com/css?family=Cinzel+Decorative' rel='stylesheet' type='text/css'/>
            </xpath>
            <!-- hide the original menu bar -->
            <xpath expr="//body/div[@id='wrapwrap']/header/div" position="attributes">
                <attribute name="class">navbar navbar-default navbar-static-top hidden-lg hidden-md hidden-sm</attribute>
            </xpath>
            <!-- add Middle Logo style menu -->
            <xpath expr="//body/div[@id='wrapwrap']/header" position="inside">
                <div id="ml-menu" class="ml-navbar hidden-xs">
                    <div id="ml-menu-bar" class="container">
                        <t t-set="menu_left" t-value="website.menu_id.child_id[:len(website.menu_id.child_id)/2]"/>
                        <t t-set="menu_right" t-value="website.menu_id.child_id[len(website.menu_id.child_id)/2:]"/>
                        <div class="row">
                            <ul>
                                <div id="menu-leftside" class="col-md-5">
                                    <div class="nav navbar-nav navbar-right">
                                        <t t-foreach="menu_left" t-as="submenu">
                                            <t t-call="website.submenu"/>
                                        </t>
                                    </div>
                                </div>
                                <div id="menu-center" class="col-md-2 hidden-xs">
                                    <img id="ml-logo" src="/logo.png" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                                </div>
                                <div id="menu-rightside" class="col-md-5">
                                    <div class="nav navbar-nav navbar-left">
                                        <t t-foreach="menu_right" t-as="submenu">
                                            <t t-call="website.submenu"/>
                                        </t>
                                    </div>
                                </div>
                            </ul>
                        </div>
                    </div>
                </div>
            </xpath>
            <!-- define a class to body -->
            <xpath expr="//body" position="attributes">
                <attribute name="class">ml-body</attribute>
            </xpath>
            <!-- define a class to footer -->
            <xpath expr="//footer" position="attributes">
                <attribute name="class">ml-footer</attribute>
            </xpath>
            <!-- add log in/out in footer -->
            <xpath expr="//footer" position="inside">
                <div class="container">
                    <div class="pull-right">
                        <li class="dropdown" t-ignore="true" t-if="website.user_id != user_id">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <b>
                                    <span t-esc="user_id.name"/>
                                    <span class="caret"/>
                                </b>
                            </a>
                            <ul class="dropdown-menu js_usermenu" role="menu">
                                <li><a href="/web" role="menuitem">My Account</a></li>
                                <li class="divider"/>
                                <li><a t-attf-href="/web/session/logout?redirect=/" role="menuitem">Logout</a></li>
                            </ul>
                        </li>
                    </div>
                    <div class="pull-right">
                        <li groups="base.group_public">
                            <a t-attf-href="/web/login">
                                <b>Sign in</b>
                            </a>
                        </li>
                    </div>
                </div>
            </xpath>
            <!-- Customize javascript -->
            <xpath expr="//body" position="after">
                <script type="text/javascript" src="/theme_vertel/static/src/js/theme_middle_logo.js"/>
            </xpath>
        </template>

        <!-- Theme Block Logo -->
        <template id="theme_block_logo" inherit_id="website.layout" customize_show="True" active="False" name="Theme Block Logo" priority="99">
            <!-- Customize CSS -->
            <xpath expr="//head" position="after">
                <link href="/theme_vertel/static/src/css/theme_block_logo.css" rel="stylesheet" />
                <style>
                    .bl-body {
                        background: #fff;
                        list-style: none;
                    }

                    /* MENU */
                    .bl-navbar {
                        font-family: 'Ubuntu';
                        font-size: 1.5em;
                        background: none;
                        width: 100%;
                    }

                    #bl-menu-bar > div > ul > li > a {
                        padding-top: 25px;
                        padding-bottom: 25px;
                    }

                    #bl-menu-bar > div {
                        width: 1024px;
                        margin: auto;
                    }

                    .bl-navbar-fixed-top {
                        font-family: 'Ubuntu';
                        font-size: 1.5em;
                        z-index: 99;
                        margin-top: -290px;
                        position: fixed;
                        width: 100%;
                        background: #e1e1e1;
                        box-shadow: 0px 0px 20px #333;
                    }

                    /* COMPANY LOGO */
                    #logo-box {
                        padding: 0px;
                    }

                    #bl-logo {
                        width: 100%;
                        display:block;
                    }

                    /* MENU TEXT */
                    #bl-menu-bar > ul > li > a {
                        color: #333;
                    }

                    /* STYLE WHEN MOUSE HOVER */
                    #bl-menu-bar > ul > li > a:hover,
                    #bl-menu-bar > ul > li > a:focus {
                        color: #fff;
                        background-color: #333;
                    }

                    /* STYLE WHEN PAGE ACTIVE */
                    #bl-menu-bar > ul > .active > a {
                        color: #fff;
                        background-color: #333;
                    }

                    /* FOOTER STYLE*/
                    .bl-footer {

                    }
                </style>
            </xpath>

            <!-- add company logo -->
            <xpath expr="//body/div[@id='wrapwrap']/header" position="before">
                <div class="container">
                    <div id="logo-box" class="col-md-12 hidden-xs">
                        <img id="bl-logo" src="/logo1024.png" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                    </div>
                </div>
            </xpath>

            <!-- define id and class to menu bar -->
            <xpath expr="//body/div[@id='wrapwrap']/header/div" position="attributes">
                <attribute name="id">bl-menu</attribute>
                <attribute name="class">bl-navbar</attribute>
            </xpath>

            <!-- define class to menu style -->
            <xpath expr="//header//ul[@id='top_menu']" position="attributes">
                <attribute name="class">nav nav-justified</attribute>
            </xpath>
            <xpath expr="//body/div[@id='wrapwrap']/header/div/div/div[2]" position="attributes">
                <attribute name="id">bl-menu-bar</attribute>
                <attribute name="class">collapse navbar-collapse navbar-top-collapse col-md-12</attribute>
            </xpath>

            <!-- hide company name -->
            <xpath expr="//body/div[@id='wrapwrap']/header/div/div/div/a" position="attributes">
                <attribute name="class">navbar-brand hidden</attribute>
            </xpath>

            <!-- hide user login / out -->
            <xpath expr="//header//ul[@id='top_menu']/li[@class='divider']" position="attributes">
                <attribute name="class">hidden</attribute>
            </xpath>
            <xpath expr="//header//ul[@id='top_menu']/li[@class='dropdown']" position="attributes">
                <attribute name="class">hidden</attribute>
            </xpath>

            <!-- define a class to body -->
            <xpath expr="//body" position="attributes">
                <attribute name="class">bl-body</attribute>
            </xpath>
            <!-- define a class to footer -->
            <xpath expr="//footer" position="attributes">
                <attribute name="class">bl-footer</attribute>
            </xpath>
            <!-- add log in/out in footer -->
            <xpath expr="//footer" position="inside">
                <div class="container">
                    <div class="pull-right">
                        <li class="dropdown" t-ignore="true" t-if="website.user_id != user_id">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <b>
                                    <span t-esc="user_id.name"/>
                                    <span class="caret"/>
                                </b>
                            </a>
                            <ul class="dropdown-menu js_usermenu" role="menu">
                                <li><a href="/web" role="menuitem">My Account</a></li>
                                <li class="divider"/>
                                <li><a t-attf-href="/web/session/logout?redirect=/" role="menuitem">Logout</a></li>
                            </ul>
                        </li>
                    </div>
                    <div class="pull-right">
                        <li groups="base.group_public">
                            <a t-attf-href="/web/login">
                                <b>Sign in</b>
                            </a>
                        </li>
                    </div>
                </div>
            </xpath>
            <!-- Customize javascript -->
            <xpath expr="//body" position="after">
                <script type="text/javascript" src="/theme_vertel/static/src/js/theme_block_logo.js"/>
            </xpath>
        </template>

                    <!-- Left Side Menu Bottom -->
        <template id="theme_left_side_menu_bottom" inherit_id="website.layout" customize_show="True" active="False" name="Theme Left Side Menu Bottom" priority="99">
            <!-- Customize CSS -->
            <xpath expr="//head" position="after">
                <link href="/theme_vertel/static/src/css/theme_left_side_menu_bottom.css" rel="stylesheet"/>
                <style>
                    .lsmb-body {
                        background: #fff;
                        list-style: none;
                    }

                    /* LOGO */

                    #logo-box {
                        margin-top: 20px;
                        position: fixed;
                    }

                    #lsmb-logo {
                        max-width: 150px;
                    }

                    /* MENU */
                    #lsmb-menu {
                        width: 25%;
                    }

                    #lsmb-menu-bar {
                        width: 100%;
                    }

                    .lsmb-navbar {
                        font-family: 'Ubuntu';
                        font-size: 1.5em;
                        background: none;
                        position: fixed;
                        left: 20px;
                        bottom: 100px;
                        z-index: 999;
                    }

                    #lsmb-menu-bar > ul > li > a {
                        padding-top: 10px;
                        padding-bottom: 10px;
                        color: #343434;
                    }

                    /* STYLE WHEN MOUSE HOVER */
                    #lsmb-menu-bar > ul > li > a:hover,
                    #lsmb-menu-bar > ul > li > a:focus {
                        color: #D31940;
                        background: none;
                    }

                    /* STYLE WHEN PAGE ACTIVE */
                    #lsmb-menu-bar > ul > .active > a {
                        color: #D31940;
                        background:none;
                    }

                    /* FOOTER STYLE*/
                    .lsmb-footer > div > div > li > a{
                        color:#fff;
                    }
                    #wrapwrap > footer{
                        height:20px;
                        background:#888;
                        opacity:0.5;
                    }
                </style>
            </xpath>
            <!-- hide the original menu bar -->
            <xpath expr="//body/div[@id='wrapwrap']/header/div" position="attributes">
                <attribute name="class">navbar navbar-default navbar-static-top hidden-lg hidden-md hidden-sm</attribute>
            </xpath>

            <!-- define a class to body -->
            <xpath expr="//body" position="attributes">
                <attribute name="class">lsmb-body</attribute>
            </xpath>
            <!-- define a class to footer -->
            <xpath expr="//footer" position="attributes">
                <attribute name="class">lsmb-footer</attribute>
            </xpath>
            <!-- add log in/out in footer -->
            <xpath expr="//footer" position="inside">
                <div class="container" id="lsmb-footer">
                    <div class="pull-right">
                        <li class="dropdown" t-ignore="true" t-if="website.user_id != user_id">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <b>
                                    <span t-esc="user_id.name"/>
                                    <span class="caret"/>
                                </b>
                            </a>
                            <ul class="dropdown-menu js_usermenu" role="menu">
                                <li><a href="/web" role="menuitem">My Account</a></li>
                                <li class="divider"/>
                                <li><a t-attf-href="/web/session/logout?redirect=/" role="menuitem">Logout</a></li>
                            </ul>
                        </li>
                    </div>
                    <div class="pull-right">
                        <li groups="base.group_public">
                            <a t-attf-href="/web/login">
                                <b>Sign in</b>
                            </a>
                        </li>
                    </div>
                </div>
            </xpath>
            <!-- Replace Main t-raw -->
            <xpath expr="//main" position="replace">
                <main>
                    <div class="container col-lg-12 col-md-12 col-sm-12">
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <!-- add Left Side Menu Bottom style -->
                            <xpath expr="//body/div[@id='wrapwrap']/header" position="inside">
                                <!-- add company logo -->
                                <div class="container">
                                    <div id="logo-box" class="col-md-12 hidden-xs">
                                        <img id="lsmb-logo" src="/logo500.png" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                                    </div>
                                </div>
                                <div id="lsmb-menu" class="lsmb-navbar hidden-xs">
                                    <div id="lsmb-menu-bar" class="col-md-3">
                                        <ul class="nav nav-stacked nav-pills">
                                            <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                                <li><t t-call="website.submenu"/></li>
                                            </t>
                                        </ul>
                                    </div>
                                </div>
                            </xpath>
                        </div>
                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                            <t t-raw="0"/>
                        </div>
                    </div>
                </main>
            </xpath>

        </template>

    </data>
</openerp>
