        <template id="theme_vertel_custom_snippets" inherit_id="website.snippets" name="Theme Vertel Custom Snippets">
            <!-- Customize Content -->
            <xpath expr="//div[@id='snippet_content']" position="inside">

                <div>
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/theme_teamdoc/static/src/img/block_button_hover.png"/>
                        <span class="oe_snippet_thumbnail_title">Hover Button</span>
                    </div>
                    <div class="oe_snippet_body oe_share">
                        <a class="btn btn-default hover" href="#">Button with hover effect</a>
                    </div>
                </div>

            </xpath>
        </template>

